<div class="movie-card">

  <div class="card-head">
    <img src=<%= movie.poster_url %> alt="" class="card-img">

    <div class="card-overlay">

      <div class="bookmark">
        <i class="fa-solid fa-bookmark"></i>
      </div>

      <div class="rating">
        <i class="fa-solid fa-star"></i>
        <span>8.5</span>
      </div>

      <div class="play">
        <i class="fa-regular fa-circle-play fa-2xl"></i>
      </div>

    </div>
  </div>

  <div class="card-body">
    <h3 class="card-title">
      <%= movie.name_ru %>
    </h3>

    <div class="card-info">
      <span class="genre">Приключение/Фантастика</span>
      <span class="year">
        <%= movie.year %>
      </span>
    </div>
  </div>

</div>