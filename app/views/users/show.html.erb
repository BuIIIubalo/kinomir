<div class="profile">

  <!--
  - ADMIN CROWN
  -->
  <% if @user.admin?%>
    <img src="https://www.pngplay.com/wp-content/uploads/2/Crown-PNG-Clipart-Background.png" alt="poster", class="user-image" style="width: 100px; height: 100px">
  <% end %>

  <!--
  - User Image
  -->
  <% if @user.is_avatar? %>
    <%= image_tag @user.avatar, class: 'user-image' if @user.avatar.attached? %>
  <% else %>
    <img src="http://assets.stickpng.com/thumbs/585e4beacb11b227491c3399.png" alt="poster", class="user-image">
  <% end %>

  <!--
  - User name
  -->
  <h2 class="user-name">
    <%= @user.name_or_email %>
    (<%= @user.role %>)

    <% if on_my_page %>
      <%= link_to '', edit_user_path(current_user),class: 'fa-solid fa-pen-to-square' %>
    <% end %>
  </h2>
</div>

<!--
- Movies that booked user
-->
<p class="section-heading">Посмотрю позже</p>
<%= render partial: 'movies/sections/slider-section', locals: { object: nil }  %>

<!--
- Movies that liked user
-->
<p class="section-heading">Мне понравилось</p>
<%= render partial: 'movies/sections/slider-section', locals: { object: @liked_movies }  %>

<!--
- User session destroy btn
-->
<% if on_my_page %>
  <%= link_to 'Выход', destroy_user_session_path, class: 'btn-red', style: "text-align: center; padding: 20px 0" %>
<% end %>

